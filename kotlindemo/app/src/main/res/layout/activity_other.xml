<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.john.kotlinanddatabindingdemo.User"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.john.kotlinanddatabindingdemo.OtherActivity">

        <com.john.kotlindemo.DraweeView
            fresco:url="@{data.photo}"
            fresco:placeholderImage="@mipmap/ic_launcher"
            android:layout_width="300dp"
            android:layout_height="300dp" />

        <TextView
            android:text="@{data.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>
